{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "node_modules/@h5p-types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/scripts/*"],
      "@components/*": ["./src/scripts/components/*"],
      "@model/*": ["./src/scripts/model/*"],
      "@context/*": ["./src/scripts/context/*"],
      "@styles/*": ["./src/styles/*"],
      "@hooks/*": ["./src/scripts/hooks/*"],
    }
  }
}
